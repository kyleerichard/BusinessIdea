<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/borders"

    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="232dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/curlfriend"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:layout_width="371dp"
        android:layout_height="445dp"
        android:layout_marginBottom="66dp"
        android:src="@drawable/brushgold"
     />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:layout_marginBottom="156dp"
        android:src="@drawable/stars"
        android:layout_alignParentLeft="true"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/whatbutton"
        android:layout_width="191dp"
        android:layout_height="141dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/buttonborder"
        android:textStyle="bold"
        android:text="What is Curlfriend?"
        android:textColor="@color/blurple"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/whybestsellerbutton"
        android:layout_width="193dp"
        android:layout_height="138dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/buttonborder"
        android:text="Why is Curlfriend a Best Seller?"
        android:textColor="@color/blurple"
        android:textSize="25sp"
        android:textStyle="bold"
        android:onClick="openActivity2"
        />


</RelativeLayout>
